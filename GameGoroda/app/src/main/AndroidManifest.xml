<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gamegoroda">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/theme">
        <activity android:name=".HistoryActivity"
            android:label="История"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.Dialog">
        </activity>
        <activity android:name=".AddOrDelActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".AboutDevActivity"
            android:label="О разработчике"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity android:name=".ChooseDLCActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name=".HowToPlayActivity"
            android:label="Как играть"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity android:name=".DLCActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".LooseActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".GameActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".DifficultyActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".MenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChooseActivity" />
    </application>

</manifest>